# 构建阶段
FROM node:latest AS builder

WORKDIR /app

# 复制 package 文件（构建上下文已经是 ./shop_admin）
COPY package*.json ./

# 安装依赖
RUN npm ci

# 复制源代码
COPY . ./

# 构建应用
RUN npm run build

# 运行阶段 - 使用 Nginx 提供静态文件
FROM nginx:latest

# 复制构建产物到 nginx
COPY --from=builder /app/dist /usr/share/nginx/html

# 暴露端口
EXPOSE 80

# 启动 nginx
CMD ["nginx", "-g", "daemon off;"]
