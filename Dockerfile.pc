# 构建阶段
FROM node:latest AS builder

WORKDIR /app

# 复制 package 文件（构建上下文已经是 ./shop_pc）
COPY package*.json ./

# 安装依赖（使用 npm install 因为 package-lock.json 可能不同步）
RUN npm install

# 复制源代码
COPY . ./

# 构建应用
RUN npm run build

# 运行阶段
FROM node:latest

WORKDIR /app

# 安装生产依赖（构建上下文已经是 ./shop_pc）
COPY package*.json ./
RUN npm install --only=production

# 复制构建产物
COPY --from=builder /app/.output ./.output

# 暴露端口
EXPOSE 3000

# 启动 Nuxt 应用
CMD ["node", ".output/server/index.mjs"]
